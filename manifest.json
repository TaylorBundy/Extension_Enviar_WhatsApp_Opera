{
  "manifest_version": 3,
  "name": "Enviar WhatsApp rápido",
  "version": "1.0",
  "description": "Envía mensajes de WhatsApp sin agendar el número.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "permissions": ["tabs", "scripting", "windows", "system.display"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.api.whatsapp.com/send/*", "https://wa.me/*"],
      "js": ["autoclick.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png"
  },
  "commands": {
    "abrirWhatsApp": {
      "suggested_key": {
        "default": "Alt+E"
      },
      "description": "Enviar WhatsApp"
    }
  }
}
